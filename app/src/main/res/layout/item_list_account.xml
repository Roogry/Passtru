<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:background="@drawable/rectangle_search"
    android:padding="15dp">

    <TextView
        android:id="@+id/tvitemSosmed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instagram"
        android:textColor="@color/text_primary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvitemUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvitemSosmed"
        android:layout_marginTop="@dimen/xs"
        android:text="mynameis_vidya"
        android:textColor="@color/text_secondary"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="8dp"
        android:contentDescription="moreMenuButton"
        android:src="@drawable/ci_more_horizontal_black" />

</RelativeLayout>