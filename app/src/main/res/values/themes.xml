<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Passtru" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="popupMenuStyle">@style/customPopUp</item>
        <item name="editTextStyle">@style/InputTextPrimary</item>
    </style>

    <style name="customPopUp" parent="Widget.MaterialComponents.PopupMenu.ListPopupWindow">
        <item name="android:popupBackground">@drawable/bg_rounded_white</item>
    </style>

    <style name="mySpinnerItemStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DialogSecondary" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_rounded_white</item>
    </style>

    <style name="toolbarTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="sectionTitle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sectionSubtitle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="primaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="outlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="textFillColor">@color/text_primary</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="InputTextPrimary" parent="Widget.AppCompat.EditText">
        <item name="background">@drawable/bg_input_light</item>
        <item name="textFillColor">@color/text_secondary</item>
        <item name="paddingStart">@dimen/m</item>
        <item name="paddingEnd">@dimen/m</item>
    </style>

    <style name="InputTextSearch" parent="Widget.AppCompat.EditText">
        <item name="background">@drawable/bg_search</item>
        <item name="textFillColor">@color/text_primary</item>
        <item name="paddingStart">@dimen/m</item>
        <item name="paddingEnd">@dimen/m</item>
        <item name="android:paddingTop">@dimen/ms</item>
        <item name="android:paddingBottom">@dimen/ms</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">@dimen/s</item>
        <item name="maxLines">1</item>
        <item name="height">50dp</item>
    </style>
</resources>